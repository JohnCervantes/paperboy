@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row" style="margin:0; padding: 0;">
    <div class="col-sm-12" style="background-image:  url('../images/paperboylogo.png'); background-repeat: no-repeat; background-size: 100% 100%; height: 150px; width: 100%;">
    </div>
</div>

<div class="row" style="margin:0; padding: 0; border-top-width:1px; border-top-color:#0C2C52; border-top-style:solid;">
    <div class="col-sm-12" style="background-color:#5E9DC8; text-align:center; padding-top:25px; padding-bottom:25px;">
        <div class="col-sm-6" style="padding-top:75px;">
            <p style="font-weight:bold; font-family: Papyrus; font-size:20px; line-height:30px;">Paperboy is recognized as a world class manufacturer of different premium paper products.</p>
            <br />
            <p>Browse our catalogue now</p>
            <a asp-page="./PaperProducts/Index"><input type="button" class="btn-primary" value="Browse" style="color:white; width:200px; height:50px; border-radius: 12px; " /></a>
        </div>
        <div class="col-sm-6">
            <img src="~/images/HPpaperboy.png" style="margin-left: auto; margin-right: auto;display: block;" class="img-responsive" alt="paper boy image" height="450" width="400" />
        </div>
    </div>
</div>

<div class="row" style="margin:0; padding: 0;">
    <div class="col-sm-12" style="background-color: #B0C4DE;text-align:center; padding-top:25px; padding-bottom:25px;">
        <p style="font-weight:bold; font-family: Papyrus; font-size:20px; line-height:30px;"> Website Reviews</p>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4500">
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < Model.ratingList.Count; i++)
    {
        if (i == 0)
        {
                <div class="item active center-block">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4" style="text-align:right; padding-right:0; margin-right:0;">
                        <img src="@Model.ratingList[i].ImgPth" alt="profile picture" class="center-block img-circle" height="250" width="200" />
                    </div>
                    <div class="col-sm-4" style="display:table; left; padding-left:0; margin-left:0; overflow:hidden">
                        <div style="display:table; vertical-align:middle; justify-content:center">
                            <blockquote>
                                @Model.ratingList[i].Comment <br /> @Model.ratingList[i].Rating/5
                                <footer>
                                    <cite>
                                        @Model.ratingList[i].FirstName @Model.ratingList[i].LastName
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                    </div>
                    }
                    else
                    {
                <div class="item center-block">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4" style="text-align:right; padding-right:0; margin-right:0;">
                        <img src="@Model.ratingList[i].ImgPth"  alt="profile picture" class="center-block img-circle" height="250" width="200" />
                    </div>
                    <div class="col-sm-4" style="display:table; padding-left:0; margin-left:0; overflow:hidden">
                        <div style="display:table; vertical-align:middle; justify-content:center">
                            <blockquote>
                                @Model.ratingList[i].Comment <br /> @Model.ratingList[i].Rating/5
                                <footer>
                                    <cite>
                                        @Model.ratingList[i].FirstName @Model.ratingList[i].LastName
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
                    }
                    }
                </div>
        </div>
    </div>
</div>
<div class="row" style="margin:0; padding: 0;">
    <div class="col-sm-12" style="background-color: #5E9DC8; text-align:center; padding-top:25px; padding-bottom:25px;">
        <div class="col-sm-6">
            <img src="~/images/aboutHP.png" style="margin-left: auto; margin-right: auto;display: block;" class="img-responsive" alt="paper boy image" height="450" width="400" />
        </div>
        <div class="col-sm-6" style="padding-top:100px;">
            <p style="font-weight:bold; font-family: Papyrus; font-size:20px; line-height:30px; "> Learn more about the company, our vision, and our mission</p>
            <br />
            <a asp-page="./About"><input type="button" class="btn-primary" value="About" style="color:white; width:200px; height:50px; border-radius: 12px; " /></a>
        </div>
    </div>
</div>

<div class="row" style="margin:0; padding: 0;">
    <div class="col-sm-12" style="background-color:#B0C4DE; text-align:center; padding-top:25px; padding-bottom:25px; font-family:'Century Gothic';">
        <p style="font-weight:bold; font-family: Papyrus; font-size:20px; line-height:30px;"> Don't have an account yet? <br /><br /><span style="font-weight:bolder;font-size:30px; color:red; font-family:Papyrus;">Sign up now!</span></p> 
        <img src="~/images/signupHP.png" style="margin-left: auto; margin-right: auto;display: block;" class="img-responsive" alt="paper boy image" height="150" width="100" />
        <br />
        <a asp-page="./Account/Register"><input type="button" class="btn-primary" value="Sign Up" style="color:white; width:200px; height:50px; border-radius: 12px; " /></a>
    </div>
</div>
