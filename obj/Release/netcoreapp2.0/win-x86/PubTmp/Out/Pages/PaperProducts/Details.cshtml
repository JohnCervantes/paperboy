@page
@model PaperBoyMain0.Pages.PaperProducts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="width:100%;padding:0;margin:0;">
        <div class="col-sm-12" style="padding:0; margin:0;width:100%">
            <div class="center-block">
                <div class="col-sm-6" style="height:500px; display:inline-block; position:relative;">
                    <img src="~/images/@Model.PaperProduct.imgPath" alt="Product's image" class="helper center-block" style=" max-height: 300px;
  max-width: 300px;
  width: auto;
  height: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;"/>
                </div>
                <div class="col-sm-6" style="background-color:#E8E8E8; padding-left:50px; padding-bottom:50px;">
                    <br>
                    <h3 style="letter-spacing:6px; font-weight:100;">
                        @Html.DisplayFor(model => model.PaperProduct.title)
                    </h3>
                    <hr style="border-color:red; width:80%;" />
                    <h3 style="letter-spacing:5px; font-weight:bolder;">
                        $@Html.DisplayFor(model => model.PaperProduct.price)
                    </h3>
                    <br />
                    <div>
                        @Html.Raw(@Model.PaperProduct.info)
                    </div>
                    <br />
                    <br />
                    @Html.Raw(@Model.PaperProduct.purchaseLink)
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <a style="text-align:center;" class="center-block" asp-page="./Index">Back to List</a>
                </div>
        </div>
    </div>
</div>


